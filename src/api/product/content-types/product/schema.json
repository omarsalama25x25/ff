{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "price": {
      "type": "decimal"
    },
    "image": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "isOffer": {
      "type": "boolean"
    },
    "description": {
      "type": "text"
    },
    "type": {
      "type": "string"
    },
    "sizes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::size.size",
      "mappedBy": "products"
    },
    "optionGroup": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::option-category.option-category",
      "mappedBy": "products"
    }
  }
}
